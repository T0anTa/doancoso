@model DOANCOSO.ViewModel.DangKyVM

@{
    ViewBag.Title = "DangKy";
    Layout = "~/Views/Layout/NguoiDungLayout.cshtml";
}
<div class="dangky">

    <div class="col-md-8" style="margin-left:300px">
