@using DOANCOSO.Models;
@*Định nghĩa kiểu dữ liệu cho biến Model *@
@model List<Sach>


<h1 class="item-header">Sách Mới</h1>

@{
    foreach (var item in Model)
    {
        <div class="activity-list-update">
            <img src="@Url.Content("~/imagesProducts/"+item.AnhBia)" width="50" height="50" alt="Image">

            @if (item.TenSach.Length > 35)
            {
                <p><strong title="@item.TenSach">Tiêu đề: @item.TenSach.Substring(0, 35)...</strong><br /><a href="@Url.Action("XemChitiet", new { @masach=item.MaSach})">Xem chi tiết</a></p>
            }
            else
            {

                <p><strong title="@item.TenSach">Tiêu đề: @item.TenSach</strong><br /><a href="@Url.Action("XemChitiet", new { @masach=item.MaSach})">Xem chi tiết</a></p>
                <div class="clear"></div>
            }

        </div>
    }


}


<a href="#" style="background-color:#b00b1b" class="item-footer green">
    Sách Loại Mới Nhất
</a>


