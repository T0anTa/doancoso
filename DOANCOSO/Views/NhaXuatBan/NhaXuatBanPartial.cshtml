@using DOANCOSO.Models

@model List<NhaXuatBan>
<h1 id="TieuDeNXB"> Nhà Xuất Bản</h1>
@foreach (var item in Model)
{
    <div class="itemNXB"><i class="fa-solid fa-book"></i><a href="@Url.Action("SachTheoNXB", new {@MaNXB=item.MaNXB})">@item.TenNXB</a></div>
}
<div class="itemNXB"><i class="fa-solid fa-book"></i><a href="@Url.Action("DanhMucNXB")"> Nhà xuất bản khác...</a></div>

<style>
    #TieuDeNXB {
        padding: 15px 0 15px 15px;
        color: white;
        width: 135px;
        background-color: #de5529;
    }

    .itemNXB {
        font-weight: normal;
    }
</style>


